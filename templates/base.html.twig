                         <label class="custom-control-label" for="maleRadio">Male</label>                    
                    </div>
                    <div>
                        <input type="radio" id="ratherNotSayRadio" name="gender" class="custom-control-input">
                        <label class="custom-control-label" for="ratherNotSayRadio">Rather not say</label>
                    </div>
                </div>
                <div class="form-group col-md-12 col-lg-6 custom-file mr-1 d-flex justify-content-center">
                        <input type="file" class="custom-file-input" id="ProfileImageInput">
                        <label class="custom-file-label" for="ProfileImageInput">Choose your profile picture</label>
                </div>
                <small id="ProfileImageHelp" class="form-text text-muted mb-4">Put up your mean mug !</small>
