{% block javascripts %}
<script>
    $(function () {

        $("[name='registrationForm']").validate({
            rules: {
                "registration_form[nickname]": {
                    "required": true,
                    "minlength": 1,
                    "maxlength": 20
                },
                "contact[surname]": {
                    "required": true,
                    "minlength": 4,
                    "maxlength": 50
                },
                "contact[email]": {
                    "email": true,
                    "maxlength": 50
                },
            }
        })
    });
</script>

