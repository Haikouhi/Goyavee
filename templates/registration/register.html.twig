{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nickname) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }} 
        {{ form_row(registrationForm.birthdate) }}
        {{ form_row(registrationForm.language) }}
        {{ form_row(registrationForm.nationality) }}
        {{ form_row(registrationForm.photo) }}
        {{ form_row(registrationForm.gender) }}
    
        
        

        <button class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}

{% block javascripts %}
<script>
    $(function() {
    
        $("[name='registrationForm']").validate({
            rules: {
                "registration_form[nickname]":{
                    "required": true,
                    "minlength": 1,
                    "maxlength": 20
                },
            }
        })
    });
</script>
{% endblock %}