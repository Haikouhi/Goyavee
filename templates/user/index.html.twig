{% extends 'base.html.twig' %}

{% block title %}Profile | Goyavee!{% endblock %}

{% block body %}
{# public profile #}

<main class="container-fluid position-relative">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-lg-12">
                <div class="d-flex justify-content-center">
                    <img src="{{ asset('/' ~ user.getPhoto()) }}" class="profile_picture" alt="profile_picture">
                </div>
            </div>
        </div>

        <hr class="hr-private-profile">

        <div class="row">
            <div class="col-md-10 col-lg-6 offset-lg-3">
                <div>
                    <h4 class="text-center card-title">{{ user.nickname }}</h4>
                    <p class="text-center card-title">My name is {{ user.firstname }}</p>
                    <p class="text-center card-title">{{ user.age }} years old</p>
                    <p class="text-center card-title">{{ user.genderForHuman }}</p>
                    <br>
                    <p class="text-justify mb-5 card-text">{{ user.description }}</p>
                </div>
            </div>
        </div>
        <hr class="hr-private-profile">

        <div class="row">
            <div class="col-md-10 col-lg-6 offset-lg-3">
                <div>
                    <p class="text-center card-title">{{ user.nationality }}</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10 col-lg-6 offset-lg-3">
                <div>
                    <p class="text-center card-title">I speak {{ user.language }}</p>
                </div>
            </div>
        </div>

        <hr class="hr-private-profile">

        <div class="row">
            <div class="col-md-10 col-lg-6 offset-lg-3">
                <p class="text-center card-title">Star rating</p>
                <div class="d-flex justify-content-center">
                        {% if user.rating == 5 %}
                        <span class="fa fa-star rating-checked"></span>
                        <span class="fa fa-star rating-checked"></span>
                        <span class="fa fa-star rating-checked"></span>
                        <span class="fa fa-star rating-checked"></span>
                        <span class="fa fa-star rating-checked"></span>
                         {% elseif user.rating == 4 %}  
                         <span class="fa fa-star rating-checked"></span>
                        <span class="fa fa-star rating-checked"></span>
                        <span class="fa fa-star rating-checked"></span>
                        <span class="fa fa-star rating-checked"></span>
                        <span class="fa fa-star"></span>
                         {% elseif user.rating == 3 %} 
                         <span class="fa fa-star rating-checked"></span>
                         <span class="fa fa-star rating-checked"></span>
                         <span class="fa fa-star rating-checked"></span> 
                         <span class="fa fa-star"></span>
                         <span class="fa fa-star"></span>
                         {% elseif user.rating == 2 %}  
                         <span class="fa fa-star rating-checked"></span>
                         <span class="fa fa-star rating-checked"></span> 
                         <span class="fa fa-star"></span>
                         <span class="fa fa-star"></span>
                         <span class="fa fa-star"></span>
                         {% elseif user.rating == 1 %}
                         <span class="fa fa-star rating-checked"></span>
                         <span class="fa fa-star"></span>
                         <span class="fa fa-star"></span>
                         <span class="fa fa-star"></span>
                         <span class="fa fa-star"></span>
                         {% else %}
                         <span class="fa fa-star"></span>
                         <span class="fa fa-star"></span>
                         <span class="fa fa-star"></span>
                         <span class="fa fa-star"></span>
                         <span class="fa fa-star"></span>
                        {% endif %}
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-5">
            <div class="d-flex flex-wrap justify-content-center">
                <div class="m-3">
                    <img src="{{asset('dist/images/icon-music.png') }}">
                </div>
                <div class="m-3">
                    <img src="{{asset('dist/images/icon-movie.png') }}">
                </div>
                <div class="m-3">
                    <img src="{{asset('dist/images/icon-museum.png') }}">
                </div>
            </div>
        </div>

        <hr class="hr-private-profile">
    </div>
    <!-- carousels -->
    <div class="container">
        <div class="col-12">
            <div class="row justify-content-center pt-4 pb-4">
                <div class="col-12">
                    <h4 class="card-title">Previous Events :</h4>
                    <div class="MultiCarousel" data-items="1,3,5,6" data-slide="1" id="MultiCarousel" data-interval="1000">
                            <div class="MultiCarousel-inner">
                                    {% for event in events %}
                                    <div class="item">
                                        <div class="pad15">
                                            <p class="lead">{{event.name}}</p>
                                            <div><img src="{{ asset('/' ~ event.getPhoto()) }}" alt="image_event"></div>
                                            <p class="mt-1">{{event.location.name}}</p>
                                            <p>{{ event.dateStart ? event.dateStart|date('Y/m/d') : '' }}</p>
                                        </div>
                                    </div>
                                    {% endfor %}
                            </div>
                        <button class="btn btn-warning leftLst">
                            <</button> <button class="btn btn-warning rightLst">>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


